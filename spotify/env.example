# Spotify API Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Spotify App credentials
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# Optional: OAuth settings (defaults shown)
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback
SPOTIFY_SCOPE=playlist-modify-public,playlist-modify-private
SPOTIFY_CACHE_PATH=.spotify-cache

# Optional: Playlist defaults
SPOTIFY_PLAYLIST_NAME=Temple of Chills
SPOTIFY_PLAYLIST_DESCRIPTION=Made by the GPT playlist gods

# Optional: Default songs (comma-separated, format: "Song - Artist")
SPOTIFY_DEFAULT_SONGS=Sweet Caroline - Neil Diamond,In Da Club - 50 Cent,Drop It Like It's Hot - Snoop Dogg
